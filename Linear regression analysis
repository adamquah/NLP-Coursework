import pandas as pd
from sklearn.linear_model import LinearRegression
from sklearn.metrics import mean_squared_error
from sklearn.model_selection import train_test_split



# Filtering the dataset by unique items
unique_items = data['Item'].unique()

# Preparing a dictionary to store results
regression_results = {}

# Performing regression analysis for each item
for item in unique_items:
    item_data = data[data['Item'] == item]

    # Selecting features and target variable
    features = ['Agricultural land (sq. km)', 'Rice Transportation', 'On-farm Electricity Use', 'Rice Packaging', 'Rice Processing']
    X = item_data[features]
    y = item_data['Value']

    # Splitting the data into training and testing sets
    X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.3, random_state=42)

    # Training the linear regression model
    model = LinearRegression()
    model.fit(X_train, y_train)

    # Predicting and evaluating the model
    y_pred = model.predict(X_test)
    rmse = mean_squared_error(y_test, y_pred, squared=False)

    # Storing results
    regression_results[item] = {
        'Model': model,
        'RMSE': rmse
    }

# Displaying the results
regression_results
