# Data
features = ['Crop Residues', 'Rice Cultivation', 'Burning\n - Crop residues', 'Drained\n organic soils', 'Drained\n organic soils (CO2)', 'Drained \norganic soils (N2O)', 'Waste']
rmse_values = [13.77, 100.27, 1.21, 1195.76, 1148.86, 46.90, 769.99]

# Create bar chart
fig, ax = plt.subplots(figsize=(15, 8))
bars = ax.bar(features, rmse_values, color='skyblue')

# Add values on top of each bar
for bar in bars:
    height = bar.get_height()
    ax.annotate(f'{height:.2f}',
                xy=(bar.get_x() + bar.get_width() / 2, height),
                xytext=(0, 3),  # 3 points vertical offset
                textcoords="offset points",
                ha='center', va='bottom')

# X-axis labels and title
ax.set_xlabel('Features')
ax.set_ylabel('RMSE Values')
ax.set_title('Comparison of Linear Regression Models - RMSE Values')

# Show the plot
plt.show()
