# Model names
models = ['Decision Tree', 'KNN', 'Naive Bayes', 'Random Forest']

# Metrics for each model
accuracy = [0.85, 0.97, 0.97, 0.97]
precision = [0.85, 0.90, 0.99, 0.90]
recall = [0.85, 0.98, 0.75, 0.98]
f1_score = [0.85, 0.94, 0.83, 0.94]

# Calculate weighted averages
weights = [0.85, 0.9475, 0.885, 0.9475]
weighted_average = np.average([accuracy, precision, recall, f1_score], axis=0, weights=weights)

# Define colors for each model
colors = ['red', 'green', 'orange', 'purple']

# Create bar chart for model comparison
fig, ax = plt.subplots(figsize=(12, 6))

# Plot the weighted average with different colors
bars = ax.bar(models, weighted_average, color=colors, label='Weighted Average')

# Add numerical values on top of each bar
for bar, val in zip(bars, weighted_average):
    ax.text(bar.get_x() + bar.get_width() / 2, bar.get_height(), f'{val:.2f}',
            ha='center', va='bottom', color='black', fontsize=10)

# Set labels and title
ax.set_ylabel('Weighted Average Score')
ax.set_title('Weighted Average Classification Model Comparison - Metrics')

# Move legend to the upper left corner
ax.legend(loc='upper left')

# Show the plot
plt.show()
